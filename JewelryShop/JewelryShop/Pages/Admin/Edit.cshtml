                <label class="form-check-label">
                    <input class="form-check-input" asp-for="JewelryItem.InStock" /> @Html.DisplayNameFor(model => model.JewelryItem.InStock)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="JewelryItem.Description" class="control-label"></label>
                <input asp-for="JewelryItem.Description" class="form-control" />
                <span asp-validation-for="JewelryItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JewelryItem.Picture1" class="control-label"></label>
                <input asp-for="JewelryItem.Picture1" class="form-control" />
                <span asp-validation-for="JewelryItem.Picture1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JewelryItem.Picture2" class="control-label"></label>
                <input asp-for="JewelryItem.Picture2" class="form-control" />
                <span asp-validation-for="JewelryItem.Picture2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JewelryItem.Picture3" class="control-label"></label>
                <input asp-for="JewelryItem.Picture3" class="form-control" />
                <span asp-validation-for="JewelryItem.Picture3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JewelryItem.Price" class="control-label"></label>
                <input asp-for="JewelryItem.Price" class="form-control" />
                <span asp-validation-for="JewelryItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
